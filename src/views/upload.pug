extends base.pug

block content
    div.uploadContainer
        if errorMessage
            span=errorMessage
        form(method="POST", enctype="multipart/form-data")
            label(for="photo") Photo
            input(type="file", accept="image/*", required, id="photo", name="photo")
            input(placeholder="Title", required, type="text", name="title",maxlength=80)
            input(placeholder="Description", required, type="text", name="description", minlength=20)
            input(placeholder="Questions, separated by comma.", required, type="text", name="questions")
            input(type="submit", value="Upload Survey")