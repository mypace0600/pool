extends base.pug

block content 
   div.profileContainer
      form(method="POST", enctype="multipart/form-data", class="profileInput")
         input(placeholder="Name", name="name", type="text", required, value=user.name, class="globalInput")
         input(placeholder="Email", name="email", type="email", required,value=user.email, class="globalInput")
         input(placeholder="Username", name="username", type="text", required, value=user.username, class="globalInput")
         input(type="submit", value="Update Profile")